<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/moodsRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream"
    tools:context=".ui.main.MoodsActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- ðŸ”¹ Gradient Top Bar -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/gradient_topbar"
            android:gravity="center">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/my_moods"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_centerInParent="true" />
        </RelativeLayout>

        <!-- ðŸ”¹ Scrollable Content -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:padding="16dp"
            android:layout_marginBottom="70dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Mood Picker -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="12dp"
                    android:weightSum="5">

                    <TextView
                        android:id="@+id/tvCool"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        style="@style/MoodEmojiText"
                        android:text="ðŸ˜Ž" />

                    <TextView
                        android:id="@+id/tvHappy"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        style="@style/MoodEmojiText"
                        android:text="ðŸ™‚" />

                    <TextView
                        android:id="@+id/tvNeutral"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        style="@style/MoodEmojiText"
                        android:text="ðŸ˜" />

                    <TextView
                        android:id="@+id/tvSad"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        style="@style/MoodEmojiText"
                        android:text="ðŸ˜¢" />

                    <TextView
                        android:id="@+id/tvAngry"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        style="@style/MoodEmojiText"
                        android:text="ðŸ˜¡" />
                </LinearLayout>

                <!-- Todayâ€™s mood -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mood_today"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:paddingTop="12dp" />

                <TextView
                    android:id="@+id/tvTodayMood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ™‚"
                    android:textSize="56sp"
                    android:layout_gravity="center_horizontal"
                    android:padding="12dp" />

                <!-- Month-Year above calendar -->
                <TextView
                    android:id="@+id/tvMonthYear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="October 2025"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:paddingTop="12dp" />

                <!-- Calendar -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvCalendar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp" />

                <!-- Most Chosen Mood -->
                <TextView
                    android:id="@+id/tvMostChosenMood"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Most Chosen Mood: ðŸ™‚"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:paddingTop="16dp"
                    android:gravity="center" />

                <!-- Share Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnShareMood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Share Mood Summary"
                    android:layout_marginTop="20dp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <!-- ðŸ”¹ Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/bottom_nav_bg"
        app:itemIconTint="@drawable/nav_item_colors"
        app:itemTextColor="@drawable/nav_item_colors"
        app:labelVisibilityMode="unlabeled"
        app:menu="@menu/bottom_nav_menu"
        android:elevation="8dp"
        android:layout_gravity="bottom" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
